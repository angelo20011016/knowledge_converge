# --- Flask Application Secrets ---
# Generate a random string for this. Used for session signing.
FLASK_SECRET_KEY=your_super_secret_key_here

# --- Google OAuth Credentials ---
# Get these from Google Cloud Console for your OAuth 2.0 Client ID
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
# The full URL that Google redirects to after authentication.
# For local development with Docker, this should match the backend port.
GOOGLE_REDIRECT_URI=http://localhost:5001/api/auth

# --- Application URLs ---
# The URL of the frontend, used for redirects after login.
FRONTEND_URL=http://localhost:3000
# The base URL for the backend API, used by the frontend.
# This is passed as a build argument to the frontend container.
REACT_APP_API_BASE_URL=http://localhost:5001

# --- AI Model API Key ---
# Your API key for the Gemini model
GEMINI_API_KEY=your_gemini_api_key_here

# --- Admin Configuration ---
# The Google ID (the long number, not the email) of the user who should have admin access.
ADMIN_GOOGLE_ID=your_admin_google_id_here
